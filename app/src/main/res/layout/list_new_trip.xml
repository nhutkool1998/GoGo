<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_height="wrap_content">
   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       card_view:cardElevation="2dp"
       card_view:cardCornerRadius="@dimen/card_radius"

       android:background="#FFFFFFFF"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:orientation="vertical">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="GoGo the assistant"
               android:drawableStart="@drawable/icon_assistant"
               android:layout_marginEnd="@dimen/activity_vertical_margin"

               android:textSize="20sp"
           />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/txtAssitantMessage"

               android:layout_marginStart="24dp"
               android:layout_marginEnd="@dimen/activity_horizontal_margin"
               android:text="@string/currently_there_is_no_trip_n_create_one"
               android:ellipsize="none"
               android:maxLines="5"
               android:scrollHorizontally="false"
               android:layout_marginBottom="@dimen/activity_vertical_margin"
               />

               <Button
                   android:layout_width="140dp"
                   android:layout_height="30dp"
                   android:layout_columnWeight="1"
                   android:layout_marginStart="@dimen/activity_horizontal_margin"
                   android:layout_marginBottom="8dp"
                   android:layout_gravity="center"
                   android:text="Host a trip!"

                   android:textAllCaps="false"
                   android:layout_marginTop="4dp"
                   android:background="@drawable/round_button"
                   android:id="@+id/btnHostTrip"
                   android:textColor="#FFF"/>



       </LinearLayout>

   </android.support.v7.widget.CardView>
</LinearLayout>